@using NewEcommerceApp.Models.EntityModels
@model List<NewEcommerceApp.Models.ResponseModels.CustomerRepsonseModel>

<h1>Customer List</h1>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Phone
            </th>
            <th>Address</th>
            <th>Action</th>
        </tr>


    </thead>
    <tbody>

        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.PhoneNo</td>
                <td>@customer.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>