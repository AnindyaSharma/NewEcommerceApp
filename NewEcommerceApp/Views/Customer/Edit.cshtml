@model NewEcommerceApp.Models.CustomerEditViewModel

<div class="card">
    <div class="card-header">
        <h1 class="card-title">Customer Edit</h1>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Customer" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div>
                <label for="CustomerTypeId">Customer Type</label>
                <select type="text" asp-for="CustomerTypeId" asp-items="Model.CustomerTypeItem" class="form-control">
                    <option value="">Select...</option>
                </select>
                <span asp-validation-for="CustomerTypeId" class="alert-danger"></span>
            </div>
            <div>
                <label for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
                
            </div>
            <div>
                <label for="PhoneNo">Phone</label>
                <input type="text" asp-for="PhoneNo" class="form-control" />
                @*<input type="text" id="PhoneNo" name="PhoneNo" class="form-control" />*@
            </div>

            <div>
                <label for="Address">Address</label>
                <input type="text" asp-for="Address" class="form-control" />
                @*<input type="text" id="Address" name="Address" class="form-control" />*@
            </div>
            <br />
            <input type="submit" value="Save" class="btn btn-primary">
        </form>


    </div>
</div>
