@model NewEcommerceApp.Models.ProductEditViewModel

    <div class="card">
        <div class="card-header">
            <h1>Edit Product</h1>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <div><input type="hidden" asp-for="Id" /></div>
                <div>
                    <label for="CategoryId">Product Catagory</label>
                    <select type="text" asp-for="CategoryId" asp-items="Model.CatagoryItem" class="form-control">
                        <option value="">Select...</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="alert-danger"></span>
                </div>

                <div>
                    <label for="Name">Product Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="alert-danger"></span>
                </div>

                <div>
                    <label for="Phone">Code</label>
                    <input type="text" asp-for="Code" class="form-control" />
                </div>

                <div>
                    <label for="Email">Quantity</label>
                    <input type="text" asp-for="Quantity" class="form-control" />
                </div>

                <div>
                    <label for="Address">Price</label>
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
                <div>
                    <label for="Image">Image</label>
                    @{
                        var base64 = Convert.ToBase64String(Model.Image);
                        var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                        <img src='@imgsrc' style="max-width:100px;max-height:100px" />
                    }


                    <input type="file" asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="alert-danger"></span>
                </div>
                <br />
                <div>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>